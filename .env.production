# Production Environment Variables for Render.com
# Copy these to your Render.com dashboard Environment Variables section

# App Environment
NODE_ENV=production
PORT=10000

# Firebase Configuration (Add your actual Firebase config values)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
VITE_FIREBASE_APP_ID=your_app_id_here

# Mapbox Configuration
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Admin Configuration
VITE_ADMIN_EMAIL=admin@poultrymitra.com
VITE_ADMIN_PASSWORD=admin@poultrymitra

# Feature Flags
VITE_ENABLE_GPS_TRACKING=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_ADMIN_PANEL=true

# Performance Settings
VITE_MAX_TRIP_DURATION_HOURS=24
VITE_GPS_UPDATE_INTERVAL_MS=30000
VITE_MIN_DISTANCE_THRESHOLD_M=10
